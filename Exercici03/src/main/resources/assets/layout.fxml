<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">

    <!-- TextArea para chat -->
    <TextArea fx:id="chatArea" editable="false" prefHeight="206.0" prefWidth="516.0" wrapText="true" AnchorPane.bottomAnchor="194.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />

    <!-- HBox con TextField y botones -->
    <HBox spacing="5" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <TextField fx:id="promptField" promptText="Enter your prompt" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendTextBtn" text="Send Text" />
        <Button fx:id="sendImageBtn" text="Send Image" />
        <Button fx:id="cancelBtn" text="Cancel" />
    </HBox>

    <!-- ImageView para vista previa de imagen -->
    <ImageView fx:id="imageView" fitHeight="130" fitWidth="130" preserveRatio="true" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />

    <!-- Label para estado -->
    <Label fx:id="statusLabel" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="150.0" />
</AnchorPane>